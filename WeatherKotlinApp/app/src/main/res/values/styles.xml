<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorPrimaryDark">@color/white</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_style</item>
    </style>
    <style name="CornersForCardview">
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPaddingBottom">2dp</item>
        <item name="contentPaddingTop">2dp</item>
        <item name="contentPaddingLeft">2dp</item>
        <item name="contentPaddingRight">2dp</item>
    </style>
    <style name="CornersForView">
        <item name="android:background">@drawable/view_border</item>
    </style>


</resources>
